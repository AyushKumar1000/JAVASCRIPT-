<body>

  <h1 id="mytext">Web Development</h1>
  <div>
    <button onclick="show()">Show</button>
    <button onclick="hide()">Hide</button>
  </div>

  <script>
    function show() {
      document.getElementById("mytext").style.display = "block";
    }

    function hide() {
      document.getElementById("mytext").style.display = "none";
    }
  </script>

